<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>

<h2>
  <%= @item.name.titleize %>
</h2>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find(@item.category_id).name %>
</p>

<p>
  <strong>Price:</strong>
  <%= '%.2f' % @item.price %>
</p>

<%= link_to 'Buy Now', '#', :class => "btn btn-warning", :style => 'margin-bottom: 20px;' %>

<div>
  <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-info" %>
  |
  <%= link_to 'Back', items_path, :class => "btn btn-info" %>
</div>
