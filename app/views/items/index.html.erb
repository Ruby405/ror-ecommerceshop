<h3>Search Result: Found <%= @items.count %> item(s)</h3>

<%= paginate @items if @items %>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name.titleize, item, :style => 'text-decoration: underline;' %></td>
        <td><%= item.description %></td>
        <td><%= '%.2f' % item.price %></td>
        <td><%= item.category.name.titleize %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, :class => "btn btn-success" %>
